import re

def check_password_strength(password):
    strength = 0
    feedback = []

    # Criteria
    if len(password) >= 8:
        strength += 1
    else:
        feedback.append("Make it at least 8 characters long.")

    if re.search(r'[A-Z]', password):
        strength += 1
    else:
        feedback.append("Add at least one uppercase letter (A-Z).")

    if re.search(r'[a-z]', password):
        strength += 1
    else:
        feedback.append("Add at least one lowercase letter (a-z).")

    if re.search(r'\d', password):
        strength += 1
    else:
        feedback.append("Include at least one number (0-9).")

    if re.search(r'[!@#$%^&*(),.?":{}|<>]', password):
        strength += 1
    else:
        feedback.append("Use at least one special character (e.g. @, #, $, %).")

    # Strength levels
    if strength <= 2:
        rating = "Weak"
    elif strength == 3 or strength == 4:
        rating = "Moderate"
    else:
        rating = "Strong"

    return rating, feedback

def main():
    print("=== Password Strength Checker ===")
    password = input("Enter a password to check: ").strip()

    rating, feedback = check_password_strength(password)

    print(f"\nðŸ” Password Strength: {rating}")
    if feedback:
        print("\nðŸ›  Suggestions to improve your password:")
        for tip in feedback:
            print(f"- {tip}")
    else:
        print("âœ… Your password is strong!")

if __name__ == "__main__":
    main()
